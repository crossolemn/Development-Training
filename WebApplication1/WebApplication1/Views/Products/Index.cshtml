@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>商品管理</h2>

<p>
    @Html.ActionLink("在庫管理画面へ移動", "Index", "Inventories")
</p>

<p>

<p><a href="http://localhost:54630/Products/Create" class="btn btn-primary btn-default">新規商品を追加 </a></p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.商品番号)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.商品名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.価格)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.生産地)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.商品番号)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.商品名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.価格)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.生産地)
                </td>
                <td>
                    @Html.ActionLink("編集", "Edit", new { id = item.商品番号 }) |
                    @Html.ActionLink("詳細", "Details", new { id = item.商品番号 }) |
                    @Html.ActionLink("削除", "Delete", new { id = item.商品番号 })
                </td>
            </tr>
        }

    </table>
