@model WebApplication1.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>商品情報の編集</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>商品管理</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.商品番号)

        <div class="form-group">
            @Html.LabelFor(model => model.商品名, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.商品名, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.商品名, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.価格, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.価格, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.価格, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.生産地, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.生産地, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.生産地, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("商品管理画面へ戻る", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
