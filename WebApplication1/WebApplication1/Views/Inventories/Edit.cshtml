@model WebApplication1.Models.Inventory

@{
    ViewBag.Title = "Edit";
}

<h2>在庫情報の編集</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>在庫管理</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.商品番号)

        <div class="form-group">
            @Html.LabelFor(model => model.商品名, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.商品名)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.価格, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.価格)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.個数, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.個数, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.個数, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("在庫管理画面へ戻る", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
